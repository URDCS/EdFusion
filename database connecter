import mysql.connector

def connect_to_database():
    try:
        mydb = mysql.connector.connect(
            host="localhost", 
            user="root",  
            password="your_password",  # Replace with your MySQL password
            database="school" )
        print("Successfully connected to the database!")
        return mydb
    except mysql.connector.Error as err:
        print(f"Error connecting: {err}")
        return None

def extract_data(connection):
    """Extracts and prints data from a table."""
   if connection:
    cursor = connection.cursor()
    print("choose number to display table : 1 - 11A, 2 - 11B, 3 - 12A, 4 - 12B")
    choice = int(input("enter your choice"))
    try:
        if choice == 1:
            cursor.execute("SELECT * FROM 11A")
            results_11A = cursor.fetchall()
            print("\n--- Data from table: 11A ---")
            if results_11A:
                for row in results_11A:
                print(row)
            else:
                print("No data found in 11A.")

        if choice == 2:
            cursor.execute("SELECT * FROM 11B")
            results_11B = cursor.fetchall()
              print("\n--- Data from table: 11B ---")
        if results_11B:
            for row in results_11B:
                print(row)
        else:
            print("No data found in 11B.")

            if choice == 3:
            cursor.execute("SELECT * FROM 12A")
            results_12A = cursor.fetchall()
             print("\n--- Data from table: 12A ---")
        if results_12A:
            for row in results_12A:
                print(row)
        else:
            print("No data found in 12A.")
        if choice == 4:
            cursor.execute("SELECT * FROM 12B")
            results_12B = cursor.fetchall()
             print("\n--- Data from table: 12B ---")
        if results_12B:
            for row in results_12B:
                print(row)
        else:
            print("No data found in 12B.")
       
    except Exception as err: 
        print(f"Error extracting data: {err}")
    finally:
        cursor.close()
